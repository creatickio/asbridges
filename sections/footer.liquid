{{ 'footerMain.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="row">
    <div class="col-lg-4 copyright">Â© Copyright 2022 | AsBridges By <a class="company" href="https://creatick.io" target="_blank">Creatick</a></div>
    <div class="col-lg-5">
      <ul class="footerMenu">
        {% for link in linklists.footer.links %}
          <li class="menu-link">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
  </div>
    <div class="col-lg-3 paymentLogos">
      <img loading="lazy" height="22" width="300" src="{{ section.settings.payment_logos | image_url }}" alt="Payment Logos">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "class": "footerMain",
  "settings": [
    {
      "type": "image_picker",
      "id": "payment_logos",
      "label": "Payment Logos"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.footer.blocks.text.name"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "text"
      }
    ]
  }
}
{% endschema %}
